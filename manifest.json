{
    "manifest_version": 3,
    "name": "ToS Summarizer (Test)",
    "version": "0.1",
    "description": "Summarizes Terms of Service using Google AI.",
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "action": {
        "default_icon": {
            "48": "icons/icon-48.png"
        },
        "default_title": "Summarize ToS",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://generativelanguage.googleapis.com/*"
    ],
    "icons": {
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png"
    }
}
